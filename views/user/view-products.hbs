

    <section>
      <div class="container mt-5">
        <div class="row">
            {{#each products}}


            <div class="col-md-3 p-3">
                <div class="card"  >
                <img style="width: 200px;height: 300px;" class="card-img-top" src="/product-images/{{this._id}}.jpeg" alt="Card image cap" />
                <div class="card-body">
                    <h5 class="card-title">{{this.Name}}</h5>
                    <h6 class="card-price">Rs.{{this.Price}}</h6>
                    <p class="card-text">{{this.Description}}</p>
                    <button onclick="addToCart('{{this._id}}')" class="btn btn-primary">Add to Cart</button>
                </div>
                </div>
            </div>
          {{/each}}
        </div>
      </div>
    </section>
